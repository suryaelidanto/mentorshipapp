generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mentorship {
  id          Int     @id @default(autoincrement())
  position    String?
  institution String?
  description String?
  contactLink String?
  meetingLink String?

  userInfoId String?
  userInfo   UserInfo? @relation(fields: [userInfoId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mentorships")
}

model UserInfo {
  id        String  @id
  firstName String?
  lastName  String?
  imageUrl  String?

  mentorships Mentorship[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_infos")
}
